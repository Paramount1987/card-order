.form-title
  margin 20px 0
  color purple
  font normal 26px/1  'Helvetica Neue', sans-serif

.form-title--sm
  margin 18px 0 8px 0

.flexbox-title
  display flex
  justify-content space-between

.form-group__title
  margin 10px 0 7px 0
  font normal 16px/16px  'Helvetica Neue', sans-serif
  color purple

.form-group
  width 320px
  margin-bottom 30px

.form-group--sm
  margin-bottom 15px

.form-group:last-of-type
  margin-bottom 10px

.form-group__flexbox
  display flex
  .form-group
    width 105px
    margin 0 0 0 20px
    &:first-child
      margin-left 0
    .form-group__input
      width 95px

.form-group__input
  margin-bottom 10px

.form-group__input--flexbox
  display flex
  justify-content space-between

.input-item
  display inline-block
  width 100%
  height 40px
  padding 0 15px
  border-radius 5px
  border solid 1px #dedcdc
  font normal 16px/40px  'Helvetica Neue', sans-serif
  text-align: left;
  color: #000;
  outline none
  &.empty
    background-color rgba(247, 231, 27, 0.07);
  &:focus
    border: solid 1px rgba(90, 16, 148, 0.35)
    box-shadow  0 2px 18px 0 rgba(0, 0, 0, 0.07)


.input-item::-webkit-input-placeholder{
  color #6b6b6b
}

.input-item--short
  width 180px

.input-item--shorter
  width 120px

.input-desc
  display flex
  width 130px
  height 40px
  font normal 13px/1  'Helvetica Neue', sans-serif
  color #777879

.input-desc__inner
  align-self center

.form-btn
  margin 20px 0
  width 180px
  height 45px
  border none
  border-radius 5px
  background-color purple
  color #fff
  font normal 16px/45px  'Helvetica Neue', sans-serif
  text-align center
  outline 0

.form-text
  color #6b6b6b
  font normal 15px/19px  'Helvetica Neue', sans-serif

.form-text--sm
  margin 8px 0 25px 0

.i-secure
  position relative
  top 8px
  display inline-block
  margin-right 2px
  width 19px
  height 26px
  background url('data:image/png;base64,')
  background-size 19px 26px
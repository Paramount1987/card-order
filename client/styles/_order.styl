@import '_form.styl'

.order-wrap
  display flex
  margin 10px auto
  width 700px
  height 589px
  background #fff
  border-radius 5px
  box-shadow: 0 2px 18px 0 rgba(0, 0, 0, 0.07)

.order-payment
  width 400px
  padding 0 25px 0 40px

.order-summary
  width 300px
  background-color rgba(230,233,240,.5)

.billing-link
  display flex
  margin 15px 0 25px 0
  color purple
  font 300 12px/1  'Helvetica Neue', sans-serif
  &:focus
    outline none
  span
    align-self flex-end

//-------------------------order step
.order-step
  padding-top 20px

.order-step__list
  margin 0
  padding 0
  list-style none
  > li
    position relative
    display inline-block
    margin-right 12px
    padding-right 22px
    &:after
      content ''
      position absolute
      z-index 1
      top 0
      right 0
      display block
      width 10px
      height 20px
      background url('data:image/png;base64,')
      background-size 10px 20px
  > li:last-child
    margin 0
    padding 0
    &:after
      display none


.order-step__item
  color #979797
  font 300 12px/20px  'Helvetica Neue', sans-serif
  &.is-active
    color purple
  &.done
    text-decoration underline

//-------------------------order success
.app-success
  padding-top 45px
  font-size 16px
  .form-title
    margin-bottom 32px

.text-order
  margin 8px 0
  font 300 16px/1  'Helvetica Neue', sans-serif

.text-estimated
  margin 25px 0 30px 0

.success-email
  color purple
  font 300 16px/1  'Helvetica Neue', sans-serif
  text-decoration underline

.print-recipe
  color purple
  font 300 13px/1  'Helvetica Neue', sans-serif
  text-decoration underline